<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="Tuan2">
<!--        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
        <class>tuan2.edu.models.Customer</class>
        <class>tuan2.edu.models.Employee</class>
        <class>tuan2.edu.models.OderDetail</class>
        <class>tuan2.edu.models.Order</class>
        <class>tuan2.edu.models.Product</class>
        <class>tuan2.edu.models.ProductPrice</class>
        <class>tuan2.edu.models.ProductImage</class>
